{
  "name": "@capacitor/background-runner",
  "version": "2.1.0",
  "description": "Capacitor Background Runner",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "license": "MIT",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "scripts/install_libs.js",
    "CapacitorBackgroundRunner.podspec"
  ],
  "author": "Ionic Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/capacitor-background-runner.git"
  },
  "bugs": {
    "url": "https://ionic.io/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api BackgroundRunnerPlugin --output-readme README.md --output-json dist/docs.json",
    "build-sdk": "./scripts/build-native-sdks.sh",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js && npm run build-sdk && ./scripts/copy-native-sdks.sh && npm pack && mv ./capacitor-background-runner-*.tgz ../../ && ./scripts/copy-readme.sh",
    "pack": "npm run build && ./scripts/copy-native-sdks.sh && npm pack && mv ./capacitor-background-runner-*.tgz ../../",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "postinstall": "node ./scripts/install_libs.js"
  },
  "devDependencies": {
    "@capacitor/android": "^7.1.0",
    "@capacitor/cli": "^7.1.0",
    "@capacitor/core": "^7.1.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "prettier": "~3.5.3",
    "prettier-plugin-java": "~2.6.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "swiftlint": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0 || ^7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
