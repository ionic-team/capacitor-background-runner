{
  "name": "android-engine",
  "private": true,
  "dependencies": {
    "clang-format": "^1.8.0",
    "prettier": "~2.3.0",
    "prettier-plugin-java": "~1.0.2",
    "prettier-plugin-kotlin": "^2.1.0"
  },
  "devDependencies": {
    "@ionic/prettier-config": "^1.0.1"
  },
  "prettier": "@ionic/prettier-config",
  "scripts": {
    "lint": "pnpm prettier --check && pnpm clang-format --dry-run",
    "fmt": "pnpm prettier --write && pnpm clang-format -i",
    "prettier": "prettier --plugin-search-dir=. \"**/*.{css,html,ts,js,java,kt}\"",
    "clang-format": "clang-format --glob=src/main/cpp/**/*.{cpp,h}"
  }
}
